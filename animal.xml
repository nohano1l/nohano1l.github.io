<?xml version="1.0"?>
<rdf:RDF
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:animal="http://example.org/animal#">

    <!-- Define Classes -->
    <rdf:Description rdf:about="http://example.org/animal#Animal">
        <rdf:type rdf:resource="http://www.w3.org/2000/01/rdf-schema#Class"/>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/animal#Mammal">
        <rdf:type rdf:resource="http://www.w3.org/2000/01/rdf-schema#Class"/>
        <rdfs:subClassOf rdf:resource="http://example.org/animal#Animal"/>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/animal#Bird">
        <rdf:type rdf:resource="http://www.w3.org/2000/01/rdf-schema#Class"/>
        <rdfs:subClassOf rdf:resource="http://example.org/animal#Animal"/>
    </rdf:Description>

    <!-- Define Properties -->
    <rdf:Property rdf:about="http://example.org/animal#hasName">
        <rdf:type rdf:resource="http://www.w3.org/1999/02/22-rdf-syntax-ns#Property"/>
        <rdfs:domain rdf:resource="http://example.org/animal#Animal"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </rdf:Property>

    <rdf:Property rdf:about="http://example.org/animal#hasLegs">
        <rdf:type rdf:resource="http://www.w3.org/1999/02/22-rdf-syntax-ns#Property"/>
        <rdfs:domain rdf:resource="http://example.org/animal#Animal"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"/>
    </rdf:Property>

    <!-- Instances -->
    <rdf:Description rdf:about="http://example.org/animal#Dog">
        <rdf:type rdf:resource="http://example.org/animal#Mammal"/>
        <animal:hasName>Dog</animal:hasName>
        <animal:hasLegs>4</animal:hasLegs>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/animal#Sparrow">
        <rdf:type rdf:resource="http://example.org/animal#Bird"/>
        <animal:hasName>Sparrow</animal:hasName>
        <animal:hasLegs>2</animal:hasLegs>
    </rdf:Description>

</rdf:RDF>